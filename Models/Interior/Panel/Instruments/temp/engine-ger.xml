<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>engine-ger.ac</path>
 
  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>needlefuel</object-name>
    <object-name>needleoil</object-name>
    
    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needlefuel</object-name>
    <object-name>needleoil</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.25 </red>
      <green> 0.25 </green>
      <blue>  0.48 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needlefuel</object-name>
    <property>engines/engine[0]/fuel-press</property>
    <min>0</min>
    <max>200</max>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 3 </ind><dep> 180 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m> -0.004 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needleoil</object-name>
    <property>engines/engine[0]/n2</property>
    <min>0</min>
    <max>25</max>
    <interpolation>
     <entry><ind>  0 </ind><dep>   0 </dep></entry>
     <entry><ind> 10 </ind><dep> 180 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.004 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
</PropertyList>
