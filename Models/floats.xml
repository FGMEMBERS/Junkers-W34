<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>floats.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>floats</object-name>
    <object-name>floats2</object-name>
    <object-name>direction2</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>floats</object-name>
    <object-name>floats2</object-name>
    <object-name>direction2</object-name>
    
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <object-name>floats</object-name>
    <object-name>direction2</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-combined-deferred</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>floats</object-name>
    <object-name>direction2</object-name>
  </effect>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction2</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> 4.52490 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.68157 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Trainee gauche -->
  <model>
    <path>Aircraft/Junkers-W34/Models/Effects/wakes/wakeGA.xml</path>
    <offsets>
      <x-m>  1.98959 </x-m>
      <y-m>  1.66597 </y-m>
      <z-m> -2.85789 </z-m>
      <pitch-deg> -45 </pitch-deg>
    </offsets>
  </model> 

  <!-- Trainee droite -->
  <model>
    <path>Aircraft/Junkers-W34/Models/Effects/wakes/wakeDA.xml</path>
    <offsets>
      <x-m>  1.98959 </x-m>
      <y-m> -1.66597 </y-m>
      <z-m> -2.85789 </z-m>
      <pitch-deg> -45 </pitch-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, avant gauche -->
  <model>
    <path>Aircraft/Junkers-W34/Models/Effects/wakes/jetGA.xml</path>
    <offsets>
      <x-m> -5.48998 </x-m>
      <y-m>  1.66597 </y-m>
      <z-m> -2.94733 </z-m>
      <pitch-deg> -90 </pitch-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, avant droite -->
  <model>
    <path>Aircraft/Junkers-W34/Models/Effects/wakes/jetDA.xml</path>
    <offsets>
      <x-m> -5.48998 </x-m>
      <y-m> -1.66597 </y-m>
      <z-m> -2.94733 </z-m>
      <pitch-deg> -90 </pitch-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, centre gauche -->
  <model>
    <path>Aircraft/Junkers-W34/Models/Effects/wakes/jetmGA.xml</path>
    <offsets>
      <x-m> -2.56000 </x-m>
      <y-m> -1.66597 </y-m>
      <z-m> -3.08489 </z-m>
      <pitch-deg> -90 </pitch-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, centre droite -->
  <model>
    <path>Aircraft/Junkers-W34/Models/Effects/wakes/jetmDA.xml</path>
    <offsets>
      <x-m> -2.56000 </x-m>
      <y-m>  1.66597 </y-m>
      <z-m> -3.08489 </z-m>
      <pitch-deg> -90 </pitch-deg>
    </offsets>
  </model>

</PropertyList>
